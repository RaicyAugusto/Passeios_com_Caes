@model PasseiosComCaes.ViewModels.LoginViewModel


@{
    ViewData["Title"] = "Login";
}
<div class="container-fluid">
    <div class="container-fluid col-md-4">
        <p>
            <h4 class="text-center">Entre com sua conta</h4>
        </p>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Desculpe,</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="text-center">
            <div class="col-md-8 offset-2">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col mb-4">
                        <label asp-for="Email" class="sr-only"></label>
                        <input asp-for="Email" class="form-control" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col mb-4">
                        <label asp-for="Password" class="sr-only"></label>
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger" ></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success" type="submit" value="Entrar"/>
                        <a class="btn btn-outline-secondary" asp-controller="Club" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
