@model PasseiosComCaes.ViewModels.RegistroViewModel


@{
    ViewData["Title"] = "Registrar-se";
}

<div class="container-fluid">
    <div class="container-fluid col-md-4">
        <p>
            <h4 class="text-center" >Registrar-se</h4>
        </p>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Desculpe!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="text-center">
            <div class="row">
                <form asp-action="Registrar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col mb-2">
                        <label asp-for="UserName" class="sr-only"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Nome de Usuário"/>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="col mb-2">
                        <label asp-for="Email" class="sr-only"></label>
                        <input asp-for="Email" class="form-control" placeholder="Email"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col mb-2">
                        <label asp-for="Password" class="sr-only"></label>
                        <input asp-for="Password" class="form-control" placeholder="Senha" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col mb-2">
                        <label asp-for="ConfirmePassword" class="sr-only"></label>
                        <input asp-for="ConfirmePassword" class="form-control" placeholder="Confirme a Senha" />
                        <span asp-validation-for="ConfirmePassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success " type="submit" value="Registrar-se" />
                        <a class="btn btn-outline-secondary" asp-controller="Club" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

