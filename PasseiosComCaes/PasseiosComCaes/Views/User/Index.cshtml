@using PasseiosComCaes.ViewModels
@model List<UserViewModel>


<div class="album py-5 bg-light">
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <div class="card-img-bottom float-lg-start mr">
                                <img class="rounded-circle" src="img/DogWalking.jpg" alt="" width="100%" height="auto">
                            </div>
                            <p class="card-text">@item.UserName</p>
                            <p class="card-text">@item.Cachorro</p>
                            <p class="card-text">@item.Pecorrido</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" class="btn btn-sm btn-outline-dark" asp-controller="User" asp-action="Detail" asp-route-id="@item.Id">
                                        Detalhes
                                    </a>

                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a type="button" class="btn btn-sm btn-outline-dark" asp-controller="Club" asp-action="Editar" asp-route-id="@item.Id">
                                            Editar
                                        </a>
                                        <a type="button" class="btn btn-sm btn-outline-dark" asp-controller="Club" asp-action="Deletar" asp-route-id="@item.Id">
                                            Deletar
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>